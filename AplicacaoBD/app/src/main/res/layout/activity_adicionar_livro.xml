<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2ca30"
    tools:context="com.example.aluno.aplicacaobd.AdicionarLivro">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Nome Livro"
            android:id="@+id/nome_livro"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/nome_autor"
            android:layout_marginTop="67dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Nome Autor"
            android:id="@+id/nome_autor"
            android:layout_below="@+id/nome_livro"
            android:layout_alignStart="@+id/nome_editora"
            android:layout_marginTop="31dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Nome Editora"
            android:id="@+id/nome_editora"
            android:layout_alignTop="@+id/nome_autor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp" />

        <Button
            android:id="@+id/botao_adicionar_dados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar Livro"
            android:layout_below="@+id/nome_autor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp" />

</RelativeLayout>
